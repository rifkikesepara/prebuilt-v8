# args.gn for V8 build with MSVC on Windows x64

is_debug = false                # Set to true for debug builds
target_cpu = "x64"             # Target architecture
is_component_build = false     # Build as monolithic .lib
v8_monolithic = true           # Link everything into one .lib
v8_use_external_startup_data = false
use_custom_libcxx = false
use_sysroot = false
treat_warnings_as_errors = false
symbol_level = 1               # Set to 2 for full debug symbols
